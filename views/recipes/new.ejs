<h1>Upload your recipe</h1>

<div class="container is-max-desktop">
<form action="/recipes" method="POST">

    <div class="field">
        <select class="select is-small is-focused" id="isRestaurant" name="isRestaurant" required>
            <option value=false>Is this a Restuarant Recipe?</option>
            <option value=true>Yes</option>
            <option value=false>No</option>
        </select>
    </div>
      
    <div class="field">
        <label for="restaurantName"></label>
        <input type="text" class="input is-light" id="restaurantName" name="restaurantName" placeholder="Restaurant Name (optional)">
      </div>
   
    <div class="field">
        <label for="username"></label>
        <input type="hidden" id="username" name="username" value="<%= currentUser.name %>" required>
      </div>

      
    <div class="field">
          <label for="name"></label>
          <input type="text" class="input is-primary" id="name" name="name" required placeholder="Name of dish">
    </div>

    <div class="field has-addons">
        <label for="preptime"></label>
        <input type="text" class="input is-primary is-small" id="preptime" name="preptime" required placeholder="Prep Time">
        <label for="cooktime"></label>
        <input type="text" class="input is-primary is-small" id="cooktime" name="cooktime" required placeholder="Cook Time">
  </div>
    
    <div class="field">
      <label for="difficulty">Difficulty Level</label>
      <select class="select is-small is-focused" id="difficulty" name="difficulty" required>
          <option value="easy">Easy</option>
          <option value="intermediate">Intermediate</option>
          <option value="hard">Hard</option>
      </select>
  </div>



    <div class="field">
      <label for="story">Story:</label>
      <textarea class="textarea" id="story" name="story" placeholder="What makes this dish special?" required></textarea>  
    </div>
    

  <div class="field">
    <label for="ingredients">Ingredients:</label>
    <textarea class="textarea" id="ingredients" name="ingredients" 
    placeholder="Seperate each ingredient by a comma (i.e. 1 lb Chicken breast, 2 tbs Salt, 1 tbs Butter)" required></textarea>
  </div>

  <div class="field">
    <label for="method">Method:</label>
    <textarea class="textarea" id="method" name="method" required 
    placeholder="Describe the cooking proccess for the dish"></textarea>
  </div>

  <input type="submit" class="button is-primary">
</form>
</div>
