<% const ingredientsArray = ingredients.split(",") %>

<div class="columns is-centered mt-6">
<div class="column is-two-third">
    <div class="box">
        <div class="content is-small">
            <h1>
                <a href="/restaurant/<%= restaurantName %>"><%= restaurantName %></a>
            </h1>
            <h1>
                <%= name %>
            </h1>
            <div class="tags has-addons">
                <span class="tag is-primary"> difficulty </span>
                <span class="tag"> <%= difficulty %> </span>
            </div>
            <div class="tags has-addons">
                <span class="tag is-primary"> Prep Time </span>
                <span class="tag"> <%= preptime %> </span>
                <span class="tag is-primary"> Cook Time </span>
                <span class="tag"> <%= cooktime %> </span>
            </div>
            <p>
                <%= story %> 
            </p>

            <h3>Ingredients:</h3>
            <ul>
                <% ingredientsArray.forEach((ingredient) =>{ %>
                    <li><%= ingredient %></li>
               <% }) %> 
            </ul>
            <h4>Method:</h4>
            <p>
                <%= method %> 
            </p>
        </div>
        <!-- <button class="button is-primary is-rounded is-pulled-right" disabled >Make It Your Own</button> -->
    </div> 


    <form action="/recipes/<%=id%>/comments" method="POST">
        <strong class="has-text-primary-dark">Share your thoughts</strong>
        <br>
        <br>
    <article class="media"> 
        <div class="media-content">
          <div class="field has-addons">
            
                <label for="comment"></label>
          <input type="text" class="input is-primary is-large has-text-weight-light" id="comment" name="comment" required placeholder="Add a comment...">
              
        
        <nav class="level">
          <div class="level-left">
            <div class="level-item">
             
            </div>
          </div>
          <div class="level-right">
            <div class="level-item">
              <input type="submit" class="button is-primary is-large has-text-weight-light">
            </div>
          </div>
        </nav>
          </div>

         
          <% if (recipe.comments && recipe.comments.length) { %>
            <% recipe.comments.forEach(comment =>{ %>
            <div class="media-content">
                <div class="content">
                  <p class="box">
                    <strong><%=comment.author%></strong>
                    <br><br>
                    <%=comment.content%>
                    <br>
                    <small><%=comment.createdAt%> </small>
                  </p>
                </div>
            </div>
        
    </article>
</form>
            <% }) %> 
            <% } %> 
    
  
       
    
      

</div>
</div>